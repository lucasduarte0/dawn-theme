{% if settings.enable_shopify_payments_currencies %}
  <select class="currencies">
    {%- for currency in shop.enabled_currencies -%}
        <option data-currency="{{currency.iso_code}}" {% if currency == cart.currency %} selected {% endif %} value="{{currency.iso_code}}">{{currency.iso_code}}</option> 
    {%- endfor -%}
  </select>
