{% section 'header-wordmark-brown' %}

<div class="hero access bg-cream pt-40 md:pt-[114px]">
  <div class="container-700 pt-20 pb-40 md:py-8 space-y-8 text-center">
    <h1 class="mb-5 text-[50px] font-heading mb-8 lg:text-30">
      Create Account
    </h1>
    {% form 'create_customer', class: "form space-y-6 md:space-y-5" %}
      <input type="hidden" name="return_to" value="/account/register#success" />
      <input type="hidden" name="checkout_url" value="/account/" /> 
      {% if form.errors %}
        {{ form.errors | default_errors }}
      {% else %}
        <div id="register-success" class="border p-3 border-brown text-center" style="display:none;">Thank you for creating an account with {{ shop.name }}! Check your email to activate your account now.</div>
      {% endif %}
      <div><input type="text" value="" name="customer[first_name]" placeholder="First Name"  class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
      <div><input type="text" value="" name="customer[last_name]" placeholder="Last Name"  class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
      <div><input type="email" value="" name="customer[email]" placeholder="Email Address"  class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
      <div><input type="password" value="" name="customer[password]" placeholder="Password"  class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
      <button class="button">Create</button>
    {% endform %}
  </div>
</div>

<script type="text/javascript">
  if (window.location.hash === "#success") {
    if(document.getElementById("register-success") !== null){
      document.getElementById("register-success").style.display = "block";
    }
  }
</script>