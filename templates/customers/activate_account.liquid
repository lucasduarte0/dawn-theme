{% section 'header-wordmark-brown' %}

<div class="hero access bg-cream pt-40 md:pt-[114px]">
  <div class="container-700 pt-20 pb-40 md:py-8 space-y-8 text-center">
    <h1 class="mb-5 text-[50px] font-heading mb-8 lg:text-30">
      Activate Account
      </h1>
      {% form 'activate_customer_password', class: "form space-y-6 md:space-y-5" %}
        {{ form.errors | default_errors }}
        <div><input type="password" value="" name="customer[password]" placeholder="Password" class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
        <div><input type="password" value="" name="customer[password_confirmation]" placeholder="Password Confirmation" class="form__input tracking-widest border border-brown placeholder:text-brown" /></div>
        <div class="flex flex-wrap items-center justify-center space-x-4 mt-6">
          <div><button class="button">Activate</button></div>
          <div><button name="decline">Decline</button></div>
        </div>
      {% endform %}
  </div>
</div>