{% layout none %}

{% assign formatted_initial_value = gift_card.initial_value | money_without_trailing_zeros: gift_card.currency %}
{% assign formatted_initial_value_stripped = formatted_initial_value | strip_html %}

<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="format-detection" content="telephone=no">
  <link rel="canonical" href="{{ canonical_url }}">

  <title>{{ 'gift_cards.issued.title' | t: value: formatted_initial_value_stripped, shop: shop.name }}</title>
  <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">
  
  <style type="text/css">
    @font-face {
      font-family: 'GT Super Display Light';
      src: url('{{ '351196198-gt-super-display-light.woff' | asset_url }}') format('woff'),
           url('{{ '351196201-gt-super-display-light.woff2' | asset_url }}') format('woff2'),
           url('{{ '351196195-gt-super-display-light.otf' | asset_url }}') format('opentype'),
           url('{{ '351196196-gt-super-display-light.ttf' | asset_url }}') format('truetype');                          
      font-display: swap;
      font-style: normal;
    }
    @font-face {
      font-family: 'GT Super Display Light Italic';
      src: url('{{ '351196190-gt-super-display-light-italic.woff' | asset_url }}') format('woff'),
           url('{{ '351196193-gt-super-display-light-italic.woff2' | asset_url }}') format('woff2'),
           url('{{ '351196185-gt-super-display-light-italic.otf' | asset_url }}') format('opentype'),
           url('{{ '351196186-gt-super-display-light-italic.ttf' | asset_url }}') format('truetype');                          
      font-display: swap;
      font-style: normal;
    }      
    @font-face {
      font-family: 'GT Super Super Text Book';
      src: url('{{ '351196209-gt-super-text-book.woff' | asset_url }}') format('woff'),
           url('{{ '351196210-gt-super-text-book.woff2' | asset_url }}') format('woff2'),
           url('{{ '351196203-gt-super-text-book.otf' | asset_url }}') format('opentype'),
           url('{{ '351196208-gt-super-text-book.ttf' | asset_url }}') format('truetype');                          
      font-display: swap;
      font-style: normal;
    }            
    @font-face {
      font-family: 'Matter Light';
      src: url('{{ '351196295-matter-light.woff' | asset_url }}') format('woff'),
           url('{{ '351196298-matter-light.woff2' | asset_url }}') format('woff2');                      
      font-display: swap;
      font-style: normal;
    }      
    @font-face {
      font-family: 'Matter Regular';
      src: url('{{ '351196299-matter-regular.woff' | asset_url }}') format('woff'),
           url('{{ '351196301-matter-regular.woff2' | asset_url }}') format('woff2');                      
      font-display: swap;
      font-style: normal;
    }     
  
    * {
        margin: 0;
        padding: 0;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }
    html {
        height: 100%;
    }
    body {
        margin: 0;
        padding: 0;
        min-height: 100%;
        background-color: #FBF1DC;
        font-family: 'GT Super Super Text Book';
        font-weight: normal;
        font-style: normal;
        -webkit-font-smoothing: antialiased;
        color: #000;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        -moz-text-size-adjust: 100%;
        text-size-adjust: 100%;
    }
    img {
        display: block;
        max-width: 100%;
        height: auto;
    }
    a img {
        outline: none;
        border: none;
    }
    #gift_card {
        padding: 30px 30px 50px;
        text-align: center;
    }
    .inner {
        max-width: 900px;
        margin: 0 auto;
    }
    .logo {
        display: block;
        width: 400px;
        height: auto;
        margin: 0 auto 50px;
    }
    .logo img {
        width: 100%;
    }
    h1 {
      font-family: 'GT Super Display Light';
      font-weight: normal;    
      font-style: normal;
    }
    .gift-card-image {
        width: 100%;
        max-width: 400px;
        margin: 20px auto;
        border-radius: 50%;
    }
    #gift-card-code-digits {
        display: inline-block;
        padding: 10px 25px;
        background: #ffffff;
        letter-spacing: 3px;
        border: 3px dashed hsl(222deg, 35%, 48%);
    }
    #gift-card-instructions {
        margin-top: 12px;
        font-size: 14px;
    }
    #QrCode {
        width: 160px;
        height: 160px;
      	margin: 30px auto;
        padding: 20px;
        background: #ffffff;
    }
    .action {
        margin-top: 15px;
    }
    .action a {
        text-decoration: none;
        -webkit-transition: all 100ms linear;
             -o-transition: all 100ms linear;
                transition: all 100ms linear;
    }
    .action a.button {
      text-transform: uppercase;
      min-height: 3rem;
      width: 100%;
      cursor: pointer;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      border-radius: 0;
      border-width: 0.0625rem;
      border-color: #DD9B00;
      background-color: #DD9B00;
      padding: 0.75rem;
      font-family: Matter Light, sans-serif;
      font-size: 0.8125rem;
      letter-spacing: 0.1em;
      color: #FBF1DC;
      outline: 0.125rem solid transparent;
      outline-offset: 0.125rem;
      transition: 0.3s;
    }
    .action a.button:hover {
      background-color: #DD9B00;
      color: #FBF1DC;
    }
    .action a.textlink {
      font-family: Matter Regular,sans-serif;
      font-size: 0.8125rem;
      letter-spacing: .063em;
      padding-bottom: 0.25rem;
      border-bottom-width: 0.0625rem;
      border-color: #A67C52;
    }
    .action a.textlink:hover {
        color: #DD9B00;
        border-color: #DD9B00;
    }
    
    @media screen and (max-width: 768px){
      
      #gift_card { padding: 30px 20px 40px; }
      .logo { width: 225px; margin: 0 auto 40px; }
      h1 { font-size: 20px; }
      .gift-card-image { max-width: 250px; }
      #gift-card-code-digits { padding: 8px 18px; border: 2px dashed hsl(222deg, 35%, 48%); font-size: 16px; }
      #QrCode { width: 120px; height: 120px; padding: 10px; }
      
    }
  
  </style>
  
  {{ 'vendor/qrcode.js' | shopify_asset_url | script_tag }}

  <script type='text/javascript'>
    function selectText(element) {
        var doc = document;
        var text = doc.getElementById(element);

        if (doc.body.createTextRange) { // ms
            var range = doc.body.createTextRange();
            range.moveToElementText(text);
            range.select();
        } else if (window.getSelection) { // moz, opera, webkit
            var selection = window.getSelection();
            var range = doc.createRange();
            range.selectNodeContents(text);
            selection.removeAllRanges();
            selection.addRange(range);
        }
    }
  </script>
</head>
<body>
  
  <div id="gift_card">
    <div class="inner">
    
      <a href="{{ shop.url }}" class="logo">
        <img src="{{ 'wordmark-blue.svg' | asset_url }}" alt="{{ shop.name | escape }}" />
      </a>

      <h1>Here's Your {{ formatted_initial_value }} Gift Card!</h1>

      {% comment %} <img src="https://cdn.shopify.com/s/files/1/0599/2002/3758/products/SuperMushGiftCard-2_large.png?v=1639691271" alt="Gift Card Illustration" class="gift-card-image" /> {% endcomment %}

      <div id="gift-card-code-outer" onclick="selectText('gift-card-code-digits');">
        <span id="gift-card-code-digits">{{ gift_card.code | format_code }}</span>
      </div>

      <div id="gift-card-instructions">
        <p>Use this code at checkout to redeem your gift card.</p>
      </div> 

      {% comment %} <div id="QrCode"></div>

      <script>
        new QRCode(document.getElementById('QrCode'), {
          text: "{{ gift_card.qr_identifier }}",
          width: 120,
          height: 120
        });
      </script> {% endcomment %}

      <div class="action">
        <a href="{{ shop.url }}" class="button" target="_blank">Start Shopping</a>
      </div>
      <div class="action">
        <a href="#" class="textlink" onclick="window.print();"><i class="ico-16 print"></i>Print</a>
      </div>        
      
    </div>    
  </div>
  
</body>
</html>