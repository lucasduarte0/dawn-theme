<div class="page-width home-quotes" data-section-id="{{ section.id }}" data-section-type="quotes" id="home-quote-{{ section.id }}">
  <div class="container">
    {% if section.settings.title != blank %}
    <div class="widget-title text-center">   
      <h2>
        <span class="box-title">{{section.settings.title}}</span>
      </h2>
    </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper">
      <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
        <div class="quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>
          <blockquote class="quotes-slider__text text-center">
            <span class="quote-icon">
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-quote" viewBox="0 0 41 35"><path d="M10.208 17.711h6.124v16.332H0V21.684C0 8.184 5.444.956 16.332 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766zm24.498 0h6.124v16.332H24.498V21.684C24.498 8.184 29.942.956 40.83 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766z" fill="#000" fill-rule="evenodd"/></svg>
            </span>
            {% if block.settings.quote != blank %}
            <div class="rte-setting rte">{{ block.settings.quote }}</div>
            {% endif %}
            {% if block.settings.author != blank %}
            <cite>{{ block.settings.author | escape }}</cite>
            {% endif %}
          </blockquote>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</div>
{% if section.blocks.size > 0 %}
<script>
  jQuery(document).ready(function(){
    var instagramBlock = $('#home-quote-{{ section.id }} .quotes-slider');
    instagramBlock.each(function() {
      var self = $(this);
      self.owlCarousel({
        navigation : true,
        items: 3,
        itemsTablet: [768,3],
        itemsTabletSmall: [650,2],
        itemsMobile:[499,2],
        slideBy:9
      });
    	$(".fancybox").fancybox();
    })
  });
</script>
{% endif %}


