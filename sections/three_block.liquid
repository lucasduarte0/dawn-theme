<div class="three-block wow fadeInUp par" id="{{settings.list_four}}" data-wow-delay="{{ settings.time_lazy_load }}ms">
  {% case section.blocks.size %}
  {% when 1 %}
  {%- assign column_size = '' -%}
  {% when 2 %}
  {%- assign column_size = 'col-sm-6' -%}
  {% when 3 %}
  {%- assign column_size = 'col-sm-4' -%}
  {% endcase %}
  {% for block in section.blocks %}
  <div class="text-center col-xs-12 {{ column_size }}">
    <ul class="row-ul">
      <li style="background:{{ block.settings.text_bg }}; font-size:{{ block.settings.text_size }}px; color:{{ block.settings.text_color }}">
        {% render 'multilang' with block.settings.text %}
      </li>
    </ul>
  </div>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "3 Text Blocks",
    "class": "index-section index-section-flush ignore-match",
    "max_blocks": 3,
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          },
		  {
            "type": "text",
            "id": "text_size",
            "label": "Font Size"
          },
		  {
            "type": "color",
            "id": "text_bg",
            "label": "Backgound color"
          },
		  {
            "type": "color",
            "id": "text_color",
            "label": "Text Color"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "3 Text Blocks",
        "category": "Text",
        "blocks": [
          {
            "type": "text"
          },
          {
            "type": "text"
          },
		  {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}