<section id="faqs">
	<div class="des_faqs">
		{% render 'multilang' with section.settings.des_faqs %}
	</div>
	<div class="panel-group " id="accordion">
		{% for block in section.blocks %}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a class="{% if forloop.first %}{%else%}collapsed{% endif %}" data-toggle="collapse" data-parent="#accordion" href="#faqs-{{block.id}}" >{% render 'multilang' with block.settings.question_faqs %}</a>
					</h4>				
				</div>
              	<div id="faqs-{{block.id}}" class="panel-collapse collapse {% if forloop.first %}in{% endif %}">
                  <div class="panel-body">
                    {% render 'multilang' with block.settings.answer_faqs %}
                  </div>
			    </div>
			</div>
		{% endfor %}
	</div>
</section>
{% schema %}
  {
    "name": "Theme FAQS",
    "settings": [
		{
			"type": "richtext",
			"id" : "des_faqs",
			"label" : "Description"
		},
		{
			"type" : "text",
			"id" : "icon_faqs",
			"label" : "Icon Faqs",
			"default" : "Question"
		},
		{
			"type" : "color",
			"id" : "bg_icon_qs",
			"label" : "Background Icon",
			"default" : "#f02121"
		},
		{
			"type" : "color",
			"id" : "color_icon_qs",
			"label" : "Icon Color",
			"default" : "#fff"
		},
		{
			"type" : "color",
			"id" : "bg_question",
			"label" : "Background Question",
			"default" : "#eee"
		},
		{
			"type" : "color",
			"id" : "color_question",
			"label" : "Color Question",
			"default" : "#000"
		},
		
		{
			"type" : "text",
			"id" : "font_size_qs",
			"label" : "Font size Question",
			"default" : "13px",
			"info" : "default 13px"
		},
		{
			"type" : "text",
			"id" : "icon_answer",
			"label" : "Icon Answer",
			"default" : "Answer"
		},
		{
			"type" : "color",
			"id" : "bg_icon_answer",
			"label" : "Color Answer",
			"default" : "#00c4aa"
		},
	    {
			"type" : "color",
			"id" : "color_icon_answer",
			"label" : "Icon color",
			"default" : "#fff"
		},
		{
			"type" : "color",
			"id" : "bg_question_answer",
			"label" : "Background Answer"
		},
		{
			"type" : "color",
			"id" : "color_question_answer",
			"label" : "Color Answer",
			"default" : "#000"
		},
		{
			"type" : "text",
			"id" : "font_size_answer",
			"label" : "Font size Answer",
			"default" : "12px",
			"info" : "default 12px"
		},
		{
			"type" : "color",
			"id" : "color_question_link",
			"label" : "Color Link",
			"default" : "#e66f65"
		}
		
	],
	"blocks": [
		{
			"type" : "text",
			"name" : "Question",
			"settings":[
				{
					"type" : "richtext",
					"id" : "question_faqs",
					"label" : "Question"
				},
				{
					"type" : "richtext",
					"id" : "answer_faqs",
					"label" : "Answer"
				}
			]
		}
	]
  }
{% endschema %}
<style>
.des_faqs {

    margin: 0 auto;
    font-weight: 500;
    color: #000;
}
#faqs .panel-title > a.collapsed{
  	background: {{section.settings.bg_question}};
  	color: {{section.settings.color_question}};
  	font-size: {{section.settings.font_size_qs}}
}
  #faqs .panel-title > a{
  font-size: {{section.settings.font_size_qs}}
  }
#faqs .panel-title:before{
    content:"{{section.settings.icon_faqs}}";
    background: {{section.settings.bg_icon_qs}};
    color: {{section.settings.color_icon_qs}};
}
#faqs .panel-group .panel-body{
  	background: {{section.settings.bg_question_answer}};
  	color: {{section.settings.color_question_answer}};
  	font-size: {{section.settings.font_size_answer}}
}
#faqs .panel-group .panel-body:before{
    content:"{{section.settings.icon_answer}}";
    border:2px solid {{section.settings.bg_icon_answer}};
    color: {{section.settings.color_icon_answer}};
}
#faqs  .des_faqs a, #faqs .panel-group .panel-body a{
    color: {{section.settings.color_question_link}};
}
  #faqs .panel-default > .panel-heading{
background:none
}
</style>
